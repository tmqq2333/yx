/* pages/shopcar/shopcar.wxss */
page{
  width: 100%;
  height: 100%;
}
.container{
  width: 100%;
  height: 100%;
}
.searchbox{
  width:calc(100% - 40rpx);
  height:90rpx;
  background-color:#F1F1F1;
  margin:0 auto;
  border-radius: 45rpx;
  position: relative;/*给图标的父容器加一个相对定位的属性，把他作为定位的参考对象。*/
}

.searchbox input{
  height: 90rpx;
  margin: 0 100rpx;
}

.searchbox image{
  width: 50rpx;
  position: absolute;
  left:20rpx;
  top:22rpx;
}

.listbox{
  width: 100%;
  height:calc(100% - 95rpx);
  overflow-y: scroll;
}

.listbox image{
  width: 100%;
  height: 250rpx;
}

.fooditem{
  height:270rpx;
  border-bottom: solid 1rpx #F1F1F1;
  position: relative;
}

.fooditem image{
  width: 240rpx;
  margin: 20rpx;
}
.rightbox{
  width:calc(100% - 300rpx);
  height: 270rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.line1{
  font-size: 43rpx;
  font-weight: bold;
  padding-top: 10rpx;
}
.line2{
  color: #898989;
  margin-top: 10rpx;
}

.line3{
  color: #F76558;
  line-height:70rpx;
  font-size: 37rpx;
  margin-top: 10rpx;
}
.line4{
  margin-top: rpx;
}
.line4 text{
  border:solid 1px #E0C99F;
  color: #E0C99F;
  padding:2rpx 20rpx;
  margin-right: 10rpx;
  
}

.itemhover{
  background-color: #eee;
}
.fooditem image.btndel{
  width:60rpx;
  position: absolute;
  right: 5rpx;
  bottom:22rpx;
}

.btngotobuy{
  width: 100%;
  height:88rpx;
  background-color:rgba(168, 160, 160, 0.774);
  text-align: center;
  line-height: 88rpx;
  color: white;
}

.hoverclass{
  opacity: 0.8;
}

.sendinfobox{
  width: 100%;
  height:calc(100% - 90rpx);
  background-color: #fff;
  position: absolute;
  left: 0;
  top: 0;
}

.fline{
  position: relative;/*作为定位的参考*/
  padding-left: 20rpx;
  border-bottom: solid 1rpx #eee;
  height: 75rpx;
  line-height: 75rpx;
  font-weight: bold;
}

.fline input{
  position: absolute;
  left:220rpx;
  top: 0;
  font-weight: lighter;
  height: 75rpx;
  line-height: 75rpx;
}
.pricebox{
  margin: 10rpx;
  color: #ff6600;
}

.sendinfobox image{
  width: 100%;
  height: 220rpx;
}