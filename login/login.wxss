.header image{
  width: 200rpx;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  border-radius: 100rpx;
  text-align: center;
}
.itembox{
  width: 100%;
  margin-top: 48%;
  margin-left: 16%;
}
.itembox .item{
  border-bottom: solid 1px #eee;
  height:90rpx;
  line-height:90rpx;
  padding: 0 20rpx;
}
.itembox image{
  width: 200rpx;
}
#msg{
  color: #ff6600;
  text-align: center;
  display:block;
  position: absolute;
  top:10%;
  left:4%;
}
.fitem{
  height:90rpx;
  border-bottom: solid 1px #eee;
  position: relative;
  line-height: 90rpx;
  padding: 0 20rpx;
}

.fitem text{
  width: 200rpx;
  font-weight: bold;
  text-align: right;
  display: inline-block;
  font-size: 40rpx;
}

.fitem-big{
  height:220rpx;
  border-bottom: solid 1px #eee;
  position: relative;
  line-height: 90rpx;
  padding: 0 20rpx;
}

.fitem input{
  width:calc(100% - 220rpx);
  position: absolute;
  right: 0;
  top: 0;
  height: 90rpx;
  line-height: 90rpx;
}

.fitem-big textarea{
  width:calc(100% - 220rpx);
  position: absolute;
  right: 0;
  top: 10rpx;
  line-height:60rpx;
  max-height: 200rpx;
}

