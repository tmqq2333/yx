/* pages/myorder/myorder.wxss */
.container{
  background-color:rgba(240, 240, 240, 0.849);
}
.prolistbox{
  width: 100%;
}
.proitem{
  background-color:white ;
  margin:30rpx;
  margin-top: 0;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  box-shadow: 0 0 3rpx 0 rgba(0, 0,0, 0.5);
  padding-bottom: 50rpx;
  position: relative;
  border-radius: 15rpx;
}
.proitem image{
  width: 100%;
}
.proname{
  font-size: 40rpx;
  border-bottom: dashed 1px #eee;
  margin: 10rpx 10rpx;
  padding: 10rpx 0;

}

.price{
  color: #ff6600;
  padding-left: 10rpx;
}

.btnshow{
  width:160rpx;
  text-align: center;
  height:60rpx;
  line-height:60rpx;
  background-color: #eee;
  color: #333;
  position: absolute;
  right: 20rpx;
  bottom:60rpx;
  border-radius: 5rpx;
  padding:20rpx 25rpx;
}

.itemhover{
  box-shadow: 0 0 15rpx 1rpx rgba(0, 0,0, 0.8);
}

.hoverbtn{
  background-color: #ff6600;
  color: #fff;
}
.a1{
  color: #333;
  padding: 0 10rpx;
}
