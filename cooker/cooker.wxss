/* pages/cooker/cooker.wxss */

.main {
  background-color:#C0C0C0;
}

.container {
  background-color: rgb(255, 255, 255);
  border-top-left-radius: 35rpx;
  border-top-right-radius: 35rpx;
}
.searchbox{
  width:calc(100% - 40rpx);
  height:59rpx;
  background-color:#F1F1F1;
  margin:0 auto;
  border-radius: 45rpx;
  position: relative;/*给图标的父容器加一个相对定位的属性，把他作为定位的参考对象。*/
}

.searchbox input{
  height: 60rpx;
  margin: 0 100rpx;
}

.searchbox image{
  width: 50rpx;
  position: absolute;
  left:20rpx;
  top:22rpx;
}
page{
  width: 100%;
  height: 100%;
}

.listbox{
  width: 100%;
  height:calc(100% - 95rpx);
  overflow-y: scroll;
  margin-top: 30rpx;
}

.fooditem{
  height:270rpx;
  border-bottom: solid 1rpx #F1F1F1;
  position: relative;
}

.fooditem image{
  width: 220rpx;
  margin: 20rpx;
}
.rightbox{
  width:calc(100% - 260rpx);
  height: 270rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.line1{
  font-size: 39rpx;
  font-weight: bold;
  padding-top: 10rpx;
  position: relative;/*把line1这个盒子作为定位的参考对象*/
}
.line1 image
{
  width: 100rpx;
  position: absolute;
  right: 20rpx;
  top:5rpx;
}

.line2{
  color: #898989;
  padding: 20rpx 0;
  font-size: 30rpx;
}

.line3{
  color: #F76558;
  line-height:70rpx;
}

.line4 text{
  border:solid 1px #E0C99F;
  color: #E0C99F;
  padding:2rpx 10rpx;
  margin-right: 10rpx;
}

.itemhover{
  background-color: #eee;
}
